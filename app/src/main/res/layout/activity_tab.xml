<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewModel"
                type="cn.ryths.blog.app.view.tab.TabActivity.ViewModel"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.tab.TabActivity"
            android:orientation="vertical">

        <FrameLayout
                android:id="@+id/fragment_tab"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        <!--底部tab-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border_top"
                android:padding="5dp"
                android:gravity="center_vertical">

            <Button
                    android:id="@+id/tab_index"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text='@{viewModel.activeTab+""}'
                    android:drawableTop="@drawable/ic_tab_index"
                    android:background="@android:color/transparent"
                    android:onClick="@{(view)->viewModel.tabClick(view,viewModel.Tab_Index)}"
                    app:drawableTopTint="@{viewModel.activeTab == viewModel.Tab_Index ? @color/primary : @color/primary_text}"/>


            <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="分类"
                    android:drawableTop="@drawable/ic_tab_category"
                    android:background="@android:color/transparent"
                    android:onClick="@{(view)->viewModel.tabClick(view,viewModel.Tab_Category)}"
                    app:drawableTopTint="@{viewModel.activeTab == viewModel.Tab_Category ? @color/primary : @color/primary_text}"/>


            <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:drawableTop="@drawable/ic_tab_setting"
                    android:background="@android:color/transparent"
                    android:onClick="@{(view)->viewModel.tabClick(view,viewModel.Tab_Setting)}"
                    app:drawableTopTint="@{viewModel.activeTab == viewModel.Tab_Setting ? @color/primary : @color/primary_text}"/>
        </LinearLayout>
    </LinearLayout>
</layout>

