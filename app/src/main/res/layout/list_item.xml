<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="10dp"
              android:background="@android:color/white">

    <ImageView
            android:id="@+id/list_item_poster"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="fitXY"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:paddingStart="5dp">

        <TextView
                android:id="@+id/list_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:layout_alignParentTop="true"/>

        <TextView
                android:id="@+id/list_item_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:layout_below="@+id/list_item_title"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

            <TextView
                    android:id="@+id/list_item_createDate"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_time"/>

            <TextView
                    android:id="@+id/list_item_readNum"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_read"/>

            <TextView
                    android:id="@+id/list_item_praiseNum"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_praise"/>

            <TextView
                    android:id="@+id/list_item_category_name"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
